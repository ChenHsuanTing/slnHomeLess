@model prjHomeLess.ViewModel.CPet

@{
    ViewData["Title"] = "Create";
}
@section Styles{
    <style>
    #input{
        border:solid antiquewhite 2px;
        border-radius:20px;
        color:black;
        font-weight:400;
        background-color:antiquewhite;
    }
    label {
        color: black;
        font-weight: 900;
    }
    }
    </style>

    <h1 style="font-weight: 900; text-align:center; margin-top: 30px; margin-bottom: 10px">浪浪新增</h1>
    <div style="text-align:right; margin-right:10px; text-decoration:none">
        <a asp-action="List" class="fa-solid fa-right-from-bracket"> 返回</a>
    </div>
    <hr />
    <div class="row" style="padding-bottom:90px; display:flex;justify-content:center;align-items:center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="ProductId" class="control-label"></label>
                    <input asp-for="ProductId" class="form-control" />
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <select asp-for="CategoryName" class="form-control">
                        <option></option>
                        <option></option>
                        <option></option>
                    </select>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubCategoryName" class="control-label"></label>
                    <select asp-for="SubCategoryName" class="form-control">
                        <option></option>
                        <option></option>
                        <option></option>
                    </select>
                    <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Continued" class="control-label"></label>
                    <input asp-for="Continued" class="form-control"/>
                    <span asp-validation-for="Continued" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
