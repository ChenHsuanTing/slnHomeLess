@model IEnumerable<prjHomeLess.ViewModel.CPet>

@{
    ViewData["Title"] = "List";
}
@section Styles{
    <style>
        #test11 {
            font-size: 16px;
            font-weight: 600;
            color: black;
        }
        #thead {
            border: solid antiquewhite 2px;
            border-radius: 100px;
