<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <table class="table">
            <thead id="thead" style="text-align: center; border: solid antiquewhite 2px; border-radius: 20px; background-color: antiquewhite;">
                <tr>
                    <th id="thead">
                        @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <th id="thead">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th id="thead">
                        @Html.DisplayNameFor(model => model.SubCategoryName)
                    </th>
                    <th id="thead">
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>*@
                    <th id="thead">
                        @Html.DisplayNameFor(model => model.Continued)
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 0;
                    foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubCategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Continued)
                            </td>
                            <td>
                                <button data-toggle="modal" data-target="#myModal" Class="fa-solid fa-list" id="@item.ProductId" onclick="test(this.id)"
                                        style="border:none; background-color:transparent;color:lightseagreen">
                                </button>
                            </td>
                            <td style="">
                                @Html.ActionLink("", "Edit", "Pet", new { id = item.ProductId }, new { Class = "fa-solid fa-wrench" })
                            </td>
                            <td>
                                @Html.ActionLink("", "Delete", "Pet", new { id = item.ProductId }, new { Class = "fa-solid fa-trash-can", onclick = "return confirm('請確認是否要刪除?')" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content" font-family:標楷體>
                <div class="modal-header" style="display: flex; justify-content: center; align-items: center;">
                    <h3 style="display:flex; font-weight:900; color:black; ">浪浪資料明細</h3>
                </div>
                <div class="modal-body" style="font-weight:400">

                    <p style="text-align: center;color:black">姓名:陳國旺</p>
                    <p style="text-align: center; color: black">性別:男生</p>
                    <p style="text-align: center; color: black">手機:0931031031</p>
                    <p style="text-align: center; color: black">密碼:031</p>
                    <p style="text-align: center; color: black">地址:臺南市善化區陽光北一路4號</p>
                    <p style="text-align: center; color: black">生日:1980/7/6</p>
                    <p style="text-align: center; color: black">Email:031031@gmail.com</p>
                </div>
                <div class="modal-footer">
                    <button type="button" style="border:none;background-color:transparent" class="fa-solid fa-right-from-bracket" data-dismiss="modal"> 返回</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
